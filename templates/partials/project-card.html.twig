<span class="badge">{{ project.size.humanReadable }}</span>
<table width="100%">
  <thead>
  <tr>
    <th style="width: 45%">name</th>
    <th>size</th>
    <th>upload</th>
  </tr>
  </thead>
  <tbody>
  {% for deployment in project.deployments %}
    <tr>
      <td class="table__cell"><a href="{{ deployment.url }}" class="link">{{ deployment.name }}</a></td>
      <td class="table__cell">{{ deployment.size.humanReadable }}</td>
      <td class="table__cell">
        <relative-time
          lang="de"
          format="relative"
          precision="minute"
          threshold="P1D"
          format-style="long"
          minute="2-digit"
          hour="2-digit"
          month="2-digit"
          datetime="{{ deployment.lastUpdate|date('Y-m-d\\TH:i:sP') }}"
        >{{ deployment.lastUpdate|date('H:i d.m.Y') }}</relative-time>
      </td>
    </tr>
  {% endfor %}
  </tbody>
</table>
